unit DrawingAxisConversionClass;

interface

    uses
        System.SysUtils, system.Math,
        GeometryTypes;

    type
        TDrawingAxisConverter = class
            private
                //member variables
                    //canvas space
                        canvasHeight, canvasWidth;
                    //drawing space
                        minPoint, maxPoint : TGeomPoint;
                //helper methods
                    //drawing space boundaries
                        function domain() : double;
                        function range() : double;

        end;

implementation



end.
