unit GeomPolyLineClass;

interface

    uses
        System.SysUtils, Math,
        GeometryTypes,
        GeomLineClass;

    type
        TGeomPolyLine = class
            private
                //member variables
                    arrLines : TArray<TGeomLine>;
            protected
            public
                //constructor
                    constructor create(startPointIn, nextPointIn : TGeomPoint);
                //destructor
                    destructor destroy(); override;
                //add a line to the array of lines
                    procedure addLine(pointIn : TGeomPoiPointGeom);
        end;

implementation

    //private

    //protected

    //public
        //constructor
            constructor TGeomPolyLine.create(point1In, point2In : TGeomPoiPointGeom);
                begin
                    inherited create();

                    setLength(arrLines, 1);

                    arrLines[0] := TGeomLine.create(point1In, point2In);
                end;

        //destructor
            destructor TGeomPolyLine.destroy();
                var
                    i, arrLen : integer;
                begin
                    inherited destroy();

                    //free all the line classes
                        for i := 0 to (arrlen - 1) do
                            begin
                                freeAndNil(arrLines[0]);
                            end;
                end;

        //add a line to the array of lines
            procedure TGeomPolyLine.addLine(pointIn : TGeomPoiPointGeom);
                var
                    arrLen          : integer;
                    point1, point2  : TGeomPoiPointGeom;
                begin
                    //get array length and increment
                        arrLen := length(arrLines);

                        setLength(arrLines, arrLen + 1);

                    //assign first point as second point of previous line
                        point1 := arrLines[0].getPoint2;
                        point2 := pointIn;

                    //create new line
                        arrLines[arrlen] := TGeomLine.create(point1, point2);
                end;



end.
